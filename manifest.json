{
  "name": "Sidebar for Chrome",
  "version": "1.0",
  "manifest_version": 2,

  "description": "This extension lets you load any url in a sidebar",
  "icons": {
     "16": "icon16.png",
     "48": "icon48.png",
    "128": "icon128.png" 
  },

  "browser_action": {
    "default_icon": "icon48.png",
    "name": "Open Tasks"
  },
  "background": {
    "scripts": [ "js/sidebar.js" ],
    "persistent": true
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "webRequest"
  ],

  "web_accessible_resources": [
    "css/ui-lightness/jquery-ui-1.10.0.custom.css",
    "js/jquery-1.9.0.js",
    "js/jquery-ui-1.10.0.custom.js"
  ],

  "options_page": "options.html"
}
